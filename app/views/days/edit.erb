<link rel="stylesheet" href="/stylesheets/default.css" />
<div class="s-layout">
<!-- Sidebar -->
<div class="s-layout__sidebar">
  <a class="s-sidebar__trigger" href="#0">
     <i class="fa fa-bars"></i>
  </a>

  <nav class="s-sidebar__nav">
     <ul>
        <li>
           <a class="s-sidebar__nav-link">
              <i class="fa fa-user"></i><em><%= @user.email %></em>
           </a>
        </li>
        <li>
           <a class="s-sidebar__nav-link" href="/days/today">
              <i class="fa fa-clock-o"></i><em>Today</em>
           </a>
        </li>
        <li>
           <a class="s-sidebar__nav-link" href="/days">
             <i class="fa fa-calendar"></i><em>Previous Days</em>
           </a>
        </li>
        <li>
           <a class="s-sidebar__nav-link" href="/foods">
              <i class="fa fa-cutlery"></i><em>Foods</em>
           </a>
        </li>
        <li>
            <a class="s-sidebar__nav-link" href="/logout">
                <i class="fa fa-sign-out"></i><em>Logout</em>
            </a>
        </li>
     </ul>
  </nav>
</div>

<!-- Content -->
<main class="s-layout__content">

<form method="POST" action="/days/<%= @day.id %>">
  <div class="form-group">
    <label for="foodName">Name</label>
    <input type="text" class="form-control" id="foodName" name="name" aria-describedby="foodHelp" placeholder="Pizza">
    <small id="foodHelp" class="form-text text-muted">What's the food called?</small>
  </div>
  <div class="form-group">
    <label for="portionSize">Portions</label>
    <input type="number" class="form-control" id="portionSize" name="portion_size" aria-describedby="portionHelp" placeholder="2">
    <small id="portionHelp" class="form-text text-muted">How many portions did you eat?</small>
  </div>
  <div class="form-group">
    <label for="portionMetric">Portions Type</label>
    <input type="text" class="form-control" id="portionMetric" name="portion_metric" aria-describedby="portionMetricHelp" placeholder="Ounces">
    <small id="portionMetricHelp" class="form-text text-muted">How are the portions measured?</small>
  </div>
  <div class="form-group">
    <label for="calories">Calories</label>
    <input type="number" class="form-control" id="calories" name="calories" aria-describedby="caloriesHelp" placeholder="130">
    <small id="caloriesHelp" class="form-text text-muted">How many calories are in each portion?</small>
  </div>
  <div class="form-group">
    <label for="protein">Protein</label>
    <input type="number" class="form-control" id="protein" name="protein" aria-describedby="proteinHelp" placeholder="30">
    <small id="proteinHelp" class="form-text text-muted">How many portions did you eat?</small>
  </div>
  <div class="form-group">
    <label for="carbs">Carbs</label>
    <input type="number" class="form-control" id="carbs" name="carbs" aria-describedby="carbsHelp" placeholder="40">
    <small id="carbsHelp" class="form-text text-muted">How many portions did you eat?</small>
  </div>
  <div class="form-group">
    <label for="fat">Fat</label>
    <input type="number" class="form-control" id="fat" name="fat" aria-describedby="fatHelp" placeholder="20">
    <small id="fatHelp" class="form-text text-muted">How many portions did you eat?</small>
  </div>
  <button type="submit" class="btn btn-primary" name="submit">Add Food</button>
</form>

