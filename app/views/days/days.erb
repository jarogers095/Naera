<link rel="stylesheet" href="/stylesheets/sidebar.css" />
<link rel="stylesheet" href="/stylesheets/listtable.css" />
<link rel="stylesheet" href="/stylesheets/default.css" />
<div class="s-layout">
<!-- Sidebar -->
<div class="s-layout__sidebar">
  <a class="s-sidebar__trigger" href="#0">
     <i class="fa fa-bars"></i>
  </a>

  <nav class="s-sidebar__nav">
     <ul>
        <li>
           <a class="s-sidebar__nav-link">
              <i class="fa fa-user"></i><em><%= @user.email %></em>
           </a>
        </li>
        <li>
           <a class="s-sidebar__nav-link" href="/days/today">
              <i class="fa fa-clock-o"></i><em>Today</em>
           </a>
        </li>
        <li>
           <a class="s-sidebar__nav-link" href="/days">
             <i class="fa fa-calendar"></i><em>Previous Days</em>
           </a>
        </li>
        <li>
           <a class="s-sidebar__nav-link" href="/foods">
              <i class="fa fa-cutlery"></i><em>Foods</em>
           </a>
        </li>
     </ul>
  </nav>
</div>

<!-- Content -->
<main class="s-layout__content">


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4>Previous Days You've Tracked</h4>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th>Date</th>
            <th>Calories</th>
            <th>Protein</th>
            <th>Carbs</th>
            <th>Fat</th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <% @days.each do |d| %>
              <tr>
                <td><a href="/days/<%= d.id %>"><%= d.date %></a></td>
                <td><%= d.calories %></td>
                <td><%= d.protein %></td>
                <td><%= d.carbs %></td>
                <td><%= d.fat %></td>
                <td>
                  <p data-placement="top" data-toggle="tooltip" title="Edit">
                    <a href="/days/today" class="btn btn-primary btn-xs" role="button">
                      <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                  </p>
                </td>
                <td>
                  <p data-placement="top" data-toggle="tooltip" title="Delete">
                    <a href="/days/today" class="btn btn-danger btn-xs" role="button">
                      <span class="glyphicon glyphicon-trash"></span>
                    </a>
                  </p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

</main>
</div>